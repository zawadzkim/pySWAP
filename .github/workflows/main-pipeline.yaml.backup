name: Main Pipeline

on:
  push:
    branches: [main]
    paths-ignore:
      - "docs/**"
      - "*.md"
  workflow_dispatch:

permissions:
  contents: write
  pages: write
  id-token: write
  packages: write

jobs:
  # Step 1: Test software and build docs
  test-and-docs:
    runs-on: ubuntu-latest
    outputs:
      version: ${{ steps.extract_version.outputs.version }}
      tag-exists: ${{ steps.check_tag.outputs.exists }}
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Setup pixi
        uses: prefix-dev/setup-pixi@v0.9.2
        with:
          pixi-version: v0.59.0
          cache: true

      - name: Run tests with coverage
        run: pixi run -e dev test-cov

      - name: Test documentation build
        run: pixi run -e docs docs-build

      - name: Extract version from pixi.toml
        id: extract_version
        run: |
          version=$(grep '^version = ' pixi.toml | sed 's/.*= *"\([^"]*\)".*/\1/')
          echo "version=$version" >> $GITHUB_OUTPUT
          echo "Extracted version: $version"

      - name: Check if tag exists
        id: check_tag
        run: |
          version="${{ steps.extract_version.outputs.version }}"
          if git tag -l | grep -q "^v$version$"; then
            echo "exists=true" >> $GITHUB_OUTPUT
            echo "Tag v$version already exists"
          else
            echo "exists=false" >> $GITHUB_OUTPUT
            echo "Tag v$version does not exist"
          fi

  # Step 2: Build package (only if tests pass and tag doesn't exist)
  build-package:
    needs: test-and-docs
    if: needs.test-and-docs.outputs.tag-exists == 'false'
    runs-on: ubuntu-latest
    outputs:
      build-success: ${{ steps.build.outcome }}
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup pixi
        uses: prefix-dev/setup-pixi@v0.9.2
        with:
          pixi-version: v0.59.0
          cache: true

      - name: Install package in development mode
        run: pixi run -e dev install-package

      - name: Build package
        id: build
        run: |
          pixi run -e dev python -m build
          echo "Package built successfully"

      - name: Upload build artifacts
        uses: actions/upload-artifact@v4
        with:
          name: package-dist
          path: dist/

  # Step 3: Create tag and release
  create-release:
    needs: [test-and-docs, build-package]
    if: needs.test-and-docs.outputs.tag-exists == 'false' && needs.build-package.outputs.build-success == 'success'
    runs-on: ubuntu-latest
    outputs:
      release-created: ${{ steps.create_release.outputs.created }}
      tag-name: ${{ steps.create_tag.outputs.tag }}
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Create tag
        id: create_tag
        run: |
          version="${{ needs.test-and-docs.outputs.version }}"
          tag="v$version"
          git config user.name "github-actions[bot]"
          git config user.email "github-actions[bot]@users.noreply.github.com"
          git tag "$tag"
          git push origin "$tag"
          echo "tag=$tag" >> $GITHUB_OUTPUT
          echo "Created and pushed tag: $tag"

      - name: Create GitHub Release
        id: create_release
        uses: softprops/action-gh-release@v2
        with:
          tag_name: ${{ steps.create_tag.outputs.tag }}
          name: Release ${{ needs.test-and-docs.outputs.version }}
          generate_release_notes: true
          draft: false
          prerelease: false

      - name: Set release created flag
        id: release_flag
        run: echo "created=true" >> $GITHUB_OUTPUT

  # Step 4: Publish to PyPI
  publish-pypi:
    needs: [test-and-docs, build-package, create-release]
    if: needs.create-release.outputs.release-created == 'true'
    runs-on: ubuntu-latest
    
    steps:
      - name: Download build artifacts
        uses: actions/download-artifact@v4
        with:
          name: package-dist
          path: dist/

      - name: Setup pixi
        uses: prefix-dev/setup-pixi@v0.9.2
        with:
          pixi-version: v0.59.0
          cache: true

      - name: Publish to PyPI
        env:
          TWINE_USERNAME: __token__
          TWINE_PASSWORD: ${{ secrets.PYPI_TOKEN }}
        run: |
          pixi run -e dev python -m twine upload dist/*
          echo "Successfully published to PyPI"

  # Step 5: Deploy documentation (always runs after successful tests)
  deploy-docs:
    needs: [test-and-docs]
    if: always() && needs.test-and-docs.result == 'success'
    runs-on: ubuntu-latest
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Setup pixi
        uses: prefix-dev/setup-pixi@v0.9.2
        with:
          pixi-version: v0.59.0
          cache: true

      - name: Build documentation
        run: pixi run -e docs docs-build

      - name: Setup Pages
        uses: actions/configure-pages@v4

      - name: Upload Pages artifact
        uses: actions/upload-pages-artifact@v3
        with:
          path: 'site'

      - name: Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v4

  # Step 6: Rollback on failure
  rollback:
    needs: [test-and-docs, build-package, create-release, publish-pypi]
    if: failure() && needs.create-release.outputs.release-created == 'true'
    runs-on: ubuntu-latest
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Delete release and tag on failure
        run: |
          tag="${{ needs.create-release.outputs.tag-name }}"
          if [ -n "$tag" ]; then
            echo "Deleting release and tag: $tag"
            gh release delete "$tag" --cleanup-tag -y || echo "Release deletion failed or release doesn't exist"
            git push --delete origin "$tag" || echo "Tag deletion failed or tag doesn't exist"
            echo "Rollback completed"
          else
            echo "No tag to rollback"
          fi
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}